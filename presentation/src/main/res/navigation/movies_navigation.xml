<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movies_navigation"
        app:startDestination="@id/actionPopular">

    <fragment
            android:id="@+id/actionPopular"
            android:name="com.juan.nino.moviesrappiapp.ui.view.fragment.popular.PopularMoviesFragment"
            android:label="popular_fragment"
            tools:layout="@layout/fragment_movie_list">
        <action
                android:id="@+id/actionDetail"
                app:destination="@id/detailMovieFragment"
                app:enterAnim="@animator/slide_up_in"
                app:exitAnim="@animator/slide_up_out"
                app:popEnterAnim="@animator/slide_up_back_in"
                app:popExitAnim="@animator/slide_up_back_out"/>
    </fragment>

    <fragment
            android:id="@+id/actionRated"
            android:name="com.juan.nino.moviesrappiapp.ui.view.fragment.topRated.TopRatedMoviesFragment"
            android:label="top_rated_fragment"
            tools:layout="@layout/fragment_movie_list">
        <action
                android:id="@+id/actionDetail"
                app:destination="@id/detailMovieFragment"
                app:enterAnim="@animator/slide_up_in"
                app:exitAnim="@animator/slide_up_out"
                app:popEnterAnim="@animator/slide_up_back_in"
                app:popExitAnim="@animator/slide_up_back_out"/>
    </fragment>

    <fragment
            android:id="@+id/actionUpcoming"
            android:name="com.juan.nino.moviesrappiapp.ui.view.fragment.upcoming.UpcomingMoviesFragment"
            android:label="upcoming_fragment"
            tools:layout="@layout/fragment_movie_list">
        <action
                android:id="@+id/actionDetail"
                app:destination="@id/detailMovieFragment"
                app:enterAnim="@animator/slide_up_in"
                app:exitAnim="@animator/slide_up_out"
                app:popEnterAnim="@animator/slide_up_back_in"
                app:popExitAnim="@animator/slide_up_back_out"/>
    </fragment>

    <fragment
            android:id="@+id/detailMovieFragment"
            android:name="com.juan.nino.moviesrappiapp.ui.view.fragment.detail.DetailMovieFragment"
            android:label="detail_movie_fragment"
            tools:layout="@layout/fragment_detail_movie">
        <argument
                android:name="movie"
                app:argType="com.juan.nino.moviesrappiapp.model.MovieModel"/>
    </fragment>
</navigation>