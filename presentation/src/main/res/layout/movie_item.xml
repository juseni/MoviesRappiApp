<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movieCard"
        android:layout_width="@dimen/width_dimen_card_movie"
        android:layout_height="@dimen/height_dimen_card_movie"
        android:layout_margin="@dimen/dimen_2dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/corner_radius_card_movie"
        android:elevation="@dimen/elevation_card_movie"
        android:layout_gravity="center_horizontal"
        app:layout_anchorGravity="center_horizontal"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_8dp">

        <TextView
                android:id="@+id/movieTitle"
                style="@style/PosterTextTheme"
                android:layout_marginTop="@dimen/dimen_6dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintBottom_toTopOf="@+id/movieSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/posterMovie"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                tools:text="Rapidos y Furiosos versiÃ³n america"/>

        <TextView
                android:id="@+id/movieSubtitle"
                style="@style/PosterTextTheme"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_10"
                app:layout_constraintTop_toBottomOf="@+id/movieTitle"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                tools:text="Rating: 5.6/10.0"/>

        <ImageView
                android:id="@+id/posterMovie"
                android:layout_width="0dp"
                android:layout_height="@dimen/poster_image_height"
                android:contentDescription="@string/poster_info"
                android:scaleType="fitEnd"
                android:transitionName="posterTransition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTop"
                style="@style/guideline_horizontal"
                app:layout_constraintGuide_begin="@dimen/dimen_2dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineBottom"
                style="@style/guideline_horizontal"
                app:layout_constraintGuide_end="@dimen/dimen_2dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                style="@style/guideline_vertical"
                app:layout_constraintGuide_begin="@dimen/dimen_8dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                style="@style/guideline_vertical"
                app:layout_constraintGuide_end="@dimen/dimen_8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

